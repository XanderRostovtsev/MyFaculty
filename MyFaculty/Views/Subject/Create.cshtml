@model SubjectViewModel
@{
    ViewData["Title"] = "Добавить предмет";
    @using (Html.BeginForm())
    {
        <h3>Добавить новый предмет</h3>
        @Html.ValidationSummary(true)
        <table width="600">
            <tbody>
                <tr style="height: 50px;">
                    <td>
                        @Html.LabelFor(m => m.Title, "Название: ")
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Title)
                        @Html.ValidationMessageFor(m => m.Title, "", new { @Class = "text-danger" })
                    </td>
                </tr>
                <tr style="height: 50px;">
                    <td>
                        @Html.LabelFor(m => m.SemesterId, "Семестр: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.SemesterId, ViewBag.Semesters as SelectList)
                    </td>
                </tr>
                <tr style="height: 50px;">
                    <td>
                        @Html.LabelFor(m => m.GroupId, "Группа: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.GroupId, ViewBag.Groups as SelectList)
                    </td>
                </tr>
                <tr style="height: 50px;">
                    <td>
                        @Html.LabelFor(m => m.TeacherId, "Преподаватель: ")
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.TeacherId, ViewBag.Teachers as SelectList)
                    </td>
                </tr>
            </tbody>
        </table>

        <input type="submit" value="Добавить" class="btn btn-success" />
        <input type="button" value="Отмена" class="btn btn-danger" onclick='location.href="Index"' />
    }
}

